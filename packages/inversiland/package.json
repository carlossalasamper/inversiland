{
  "name": "inversiland",
  "version": "0.6.0",
  "description": "InversifyJS framework to build hierarchical dependency systems with an elegant API.",
  "author": {
    "name": "Carlos Sala Samper",
    "url": "https://godofprogramming.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/carlossalasamper/inversiland.git",
    "directory": "/packages/inversiland"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    ".yalc"
  ],
  "keywords": [
    "dependency injection",
    "inversify",
    "inversifyjs",
    "javascript",
    "typescript",
    "ioc",
    "nest",
    "nestjs",
    "angular",
    "inversion of control",
    "container"
  ],
  "scripts": {
    "test": "jest --coverage && jest-coverage-badges --input ./coverage/coverage-summary.json --output ../../assets/badges/coverage",
    "build": "tspc --project tsconfig.build.json",
    "build:dev": "yarn build --project tsconfig.build.json --watch",
    "yalc:publish": "yarn test && yarn build && npx yalc publish",
    "yalc:update": "yarn test && yarn build && npx yalc push --scripts --update --replace",
    "npm:publish": "yarn test && yarn build && npm publish"
  },
  "dependencies": {
    "@carlossalasamper/inversify": "file:.yalc/@carlossalasamper/inversify",
    "reflect-metadata": "^0.2.2"
  }
}
