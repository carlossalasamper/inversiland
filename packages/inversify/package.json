{
  "name": "@carlossalasamper/inversify",
  "version": "6.1.5",
  "description": "A powerful and lightweight inversion of control container for JavaScript and Node.js apps powered by TypeScript.",
  "author": {
    "name": "Carlos Sala Samper",
    "url": "https://godofprogramming.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/carlossalasamper/inversiland.git",
    "directory": "/packages/inversify"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/inversify.js",
  "types": "lib/inversify.d.ts",
  "module": "es/inversify.js",
  "exports": {
    ".": {
      "import": "./es/inversify.js",
      "require": "./lib/inversify.js"
    }
  },
  "jsnext:main": "es/inversify.js",
  "sideEffects": false,
  "keywords": [
    "dependency injection",
    "dependency inversion",
    "di",
    "inversion of control container",
    "ioc",
    "javascript",
    "node",
    "typescript"
  ],
  "scripts": {
    "build": "npm run build:lib && npm run build:amd && npm run build:es && npm run build:es6",
    "build:amd": "tsc -p src/tsconfig-amd.json",
    "build:es": "webpack && node ./scripts/writeEsmPackageJson.mjs ./es",
    "build:es6": "tsc -p src/tsconfig-es6.json",
    "build:lib": "tsc -p src/tsconfig.json",
    "clean": "rimraf amd es es6 lib",
    "postupdate": "git diff-files --quiet package-lock.json || npm test",
    "prepublish": "npm run build && publish-please guard",
    "publish-please": "publish-please",
    "test": "nyc --reporter=lcov --require ts-node/register mocha ./test/*.test.ts test/**/*.test.ts --reporter spec --retries 3 --require 'node_modules/reflect-metadata/Reflect.js' --exit",
    "update": "updates --update --minor && npm install"
  },
  "dependencies": {
    "@inversifyjs/common": "1.3.3",
    "@inversifyjs/core": "1.3.4"
  },
  "devDependencies": {
    "@types/chai": "4.3.20",
    "@types/mocha": "10.0.10",
    "@types/sinon": "17.0.3",
    "chai": "4.5.0",
    "mocha": "10.8.2",
    "nyc": "17.1.0",
    "publish-please": "5.5.2",
    "reflect-metadata": "0.2.2",
    "rimraf": "6.0.1",
    "sinon": "19.0.2",
    "ts-loader": "9.5.1",
    "updates": "16.4.0",
    "webpack": "5.96.1",
    "webpack-cli": "5.1.4"
  }
}
